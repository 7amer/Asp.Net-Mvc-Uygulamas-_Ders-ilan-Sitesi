@model DataBolumu.Models.ViewModel


@using (Html.BeginForm("YeniDersTalebiYaratPartial", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style="height:auto;">


        <div class="form-group">
            @Html.Label("Alinmak/Verilmek Istenen Ders/Dersler", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DersTalebi.AlinmakVerilmekIstenenDersDersler, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DersTalebi.AlinmakVerilmekIstenenDersDersler, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ders Talebi Konu Basligi", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DersTalebi.DersTalebiKonuBasligi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DersTalebi.DersTalebiKonuBasligi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Ders Talebi Icerigi", htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.DersTalebi.DersTalebiIcerigi, new { cols = 75, rows = 4, style = "max-width:100% !important;" })
                @Html.ValidationMessageFor(model => model.DersTalebi.DersTalebiIcerigi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ders Talebini Yarat" class="btn btn-default" style="margin-left:50px;border:1px solid rgba(0,0,0,.125);" />
            </div>
        </div>
    </div>

}
