@model DataBolumu.Models.ViewModel


@using (Html.BeginForm("MesajGonderPartial", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div style="height:auto;">


        <div class="form-group">
            @Html.Label("Alicinin Kullanici Adi", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mesaj.AliciId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mesaj.AliciId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Konu", htmlAttributes: new { @class = "control-label" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mesaj.Konu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mesaj.Konu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Mesaj Icerigi", htmlAttributes: new { @class = "control-label" })
            <div>
                @Html.TextAreaFor(model => model.Mesaj.MesajIcerigi, new { cols = 75, rows = 4, style = "max-width:100% !important;" })
                @Html.ValidationMessageFor(model => model.Mesaj.MesajIcerigi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Mesajini Gonder" class="btn btn-default" style="margin-left:50px;border:1px solid rgba(0,0,0,.125);" />
            </div>
        </div>
    </div>

}